[user]
    name = Alexey Chuvashov
    email = alexeychu@gmail.com
    user = eychu
[help]
    autocorrect = 1

[push]
    default = current

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[github]
    user = eychu

[diff]
    # For Github-style word diffs
    wordRegex = [^[:space:]]

[merge]
    summary = true
    tool = vimdiff

[alias]
    co = checkout
    ci = commit
    cm = commit -m
    st = status
    br = branch -v
    lol = log --pretty=oneline --abbrev-commit --graph --decorate
    lg  = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    lgp = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -p
    g = git
    gst = g st
    gco = g co
    gci = g ci
    unstage = reset HEAD
    aa = add .
    # Not yet added - doesn't include ignored files
    new = ls-files --others --exclude-standard
    # Files that are in the staging area
    added = diff --cached --name-only
    today = log --stat --since='1 Day Ago' --graph --pretty=oneline --abbrev-commit --date=relative
    ff = merge --ff-only
    pullsubs = submodule foreach git pull origin master
    tags = tag -l
    branches = branch -a
    remotes = remote -v
    filechanges = diff --summary
    changes = diff --name-status
    ll = log -10 --pretty=format:\"%h %Cblue%ar %Cgreen%an%Creset: %s %Cred%d\"
    gr = log --graph --pretty=format:\"%Cred%h %Cblue%ar%Creset %Cgreen%an%Creset %s %Cred%d\"
    where = branch -av --contains
    unstage = reset HEAD --
    last = log -1 HEAD
    up = pull --rebase
    put = push origin HEAD
    tc = diff --cached
    rmdf = !git rm $(git ls-files --deleted)
    g = git
    gst = g st
    gco = g co
    gci = g ci
    tree = log --graph --full-history --all --color --date=short --pretty=format:\"%Cred%x09%h %Creset%ad%Cblue%d %Creset %s %C(bold)(%an)%Creset\"

[core]
    pager = less
    editor = vim
    quotepath = false
    excludesfile = ~/.gitignore


